<h1>New guide</h1>

<% form_for :guide, @guide, :url => guides_path, :html => { :multipart => true , :method => :post } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%=f.select :category ,[["---Select---",""],["Stagg party", "Stagg party"], ["Hen party", "Hen party"]] %> 
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    Upload a file<br />
    <%= f.file_field :pdf %>
  </p>
  
   <p>
    Upload a file<br />
    <%= f.file_field :image %>
  </p>
 
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', guides_path %>
