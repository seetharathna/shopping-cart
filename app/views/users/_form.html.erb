<% form_for @user do |f| %>
  <%= f.error_messages %>
 
  
  <p>
    Name<br/>
    <%= f.text_field :name %> *
  </p>

   


   <p>
    Email id<br/>
    <%= f.text_field :email %> * 
   </p>

  
  
  
  <p>
    Address<br/>
    <%= f.text_area :address %>  
  </p>

  
  
  <p>
    Login<br/>
    <%= f.text_field :username %> * 
  </p>
  
  <p>
    Password<br/>
    <%= f.password_field :password %> * 
  </p>
  <p>
    Confirm Password<br/>
    <%= f.password_field :password_confirmation %> * 
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p> 
  
<% end %>
